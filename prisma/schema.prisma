datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  name           String?
  email          String  @unique
  emailVerified  DateTime?
  image          String?
  password       String?
}
model Movie {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  director    String
  releaseDate DateTime
  genre       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}